/* pages/cinema/cinema.wxss */
.city-fixed{
    width: 100%;
    top: 0;
    position: fixed;
    z-index: 10;
    background-color: #FBF9FE;
}
.city-choose{
    box-sizing: border-box;
    position: relative;
    margin: 30rpx;
}
.city-picker{
    position: absolute;
    z-index: 11;
    top: 0;
    left: 0;
    width: 120rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-right: 1px solid #eee;
}
.city-input{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 140rpx;
    padding-right: 20rpx;
    border-radius: 10rpx;
    border: 1px solid #eee;
    font-family: "微软雅黑";
}
.search-btn{
    position: absolute;
    z-index: 11;
    top: 0;
    right: 0;
    height: 80rpx;
    width: 120rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}
.empty-box{
    height: 150rpx;
    background-color: #FBF9FE;
}
.body{
    /*margin-top: 150rpx;*/
    /*padding-left: 30rpx;
    padding-right: 30rpx;*/
    overflow: hidden;
    height: 86vh;
    z-index: 5;
}
.cinemas-item{
    /*margin-top: 10rpx;*/
    border-bottom: 2rpx solid #D8D8D8;
    background-color: #FFF;
    overflow: hidden;
    /*border-radius: 4rpx;*/
    cursor: pointer;
}
.cinemas-info{
    display: flex;
    padding: 40rpx;
    align-items: center;
    flex-direction: row;
}
.cinemas-info-show{
}
.cinemas-info-show .cinemas-info-img{
    transform: rotate(-90deg);
}
/*.cinemas-info-name{
    flex: 1;
}
.cinemas-info-num{
    flex: 1;
}*/
.cinemas-info-title{
    flex: 1;
}
.cinemas-info-img{
    width: 32rpx;
    height: 32rpx;
    transition: transform .4s;
    transform: rotate(90deg);
}

.cinemas-list{
    display: none;
}
.cinemas-list-show{
    display: block;
}
.cinema{
    position: relative;
    padding-top: 26rpx;
    padding-bottom: 26rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
/*.cinema-info{
    background-color: #FBF9FE;
}*/
.cinema-name{
    font-size: 40rpx;
    font-family: "仿宋";
    margin-bottom: 30rpx;
}
.cinema-addr{
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    width: 80%;
    font-size: 35rpx;
    color: #999;
}
