.normal-img {
  width: 67px;
  height: 94px;
  margin-top: 25px;
  opacity: 0.5;
  transition: width 0.4s, height 0.4s, transform 0.4s;
}

.big-img {
  width: 76px;
  height: 107px;
  margin-top: 8px;
  border: 2px solid #fff;
  opacity: 1;
}

.movie-info {
  padding: 30rpx 20rpx;
  position: relative;
  text-align: center;
}

.movie-info::after {
  position: absolute;
  content: '';
  width: 20rpx;
  height: 20rpx;
  top: -8rpx;
  left: 365rpx;
  background-color: #fff;
  transform: rotate(45deg);
}

