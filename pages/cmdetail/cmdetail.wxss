.movie-title {
  margin-bottom: 0rpx;
}

.movie-name {
  font-size: 35rpx;
}

.movie-sc {
  font-size: 30rpx;
  margin-left: 20rpx;
  color: orange;
}

.movie-scm {
  font-size: 30rpx;
  color: #333;
}

/*售票信息*/

.movie-show {
  margin-top: 25rpx;
  background-color: #fff;
}

.date-scroll {
  white-space: nowrap;
  border-bottom: 1px solid #ccc;
}

/*通过js控制样式*/

.show-date {
  display: inline-block;
  padding: 25rpx 30rpx;
  font-size: 30rpx;
}

.show-selected {
  color: #1afa29;
  position: relative;
}

/*选中时候 伪类下划线*/

.show-selected::after {
  content: '';
  width: 100%;
  position: absolute;
  height: 5rpx;
  background-color: #1afa29;
  bottom: 0;
  left: 0;
}

.show-info {
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sell-false {
  color: #ccc;
}

.show-tm {
  font-size: 40rpx;
}

.show-body {
  margin-left: 80rpx;
}

.show-lang-tp {
  font-size: 30rpx;
}

.show-th {
  font-size: 25rpx;
  width: 200rpx;
}

.show-price {
  position: absolute;
  right: 30rpx;
}

.show-pr {
  font-size: 25rpx;
  text-decoration: line-through;
  color: #ccc;
}

.show-sellPr {
  font-size: 40rpx;
  color: orangered;
}

.show-line {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 2rpx;
  background-color: #f0f0f0;
}
